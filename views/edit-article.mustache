<html>
    <head>
        {{> header}}

    </head>

    <body>
        
        <div  class='container'>
        
            {{> menu}}
            <h1 class="h1">Edit Article</h1>
            <form action='/users/update-article' method="POST">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input type="text" name="title" value="{{title}}"" class="form-control" placeholder="Enter a title"/>
                </div>    
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Description</label>
                    <textarea name="description" class="form-control">{{body}}</textarea>
                </div>  
                <input type="hidden" name="articleId" value="{{articleid}}" />  
                <button type="submit" class="btn btn-primary">Submit</button>

                    
                
            </form>
        </div>

        {{> footer}}

    </body>
</html>
